@model TicketManagementProject.Models.Event

@{
    ViewBag.Title = "Details";
}

<h2>Event Details</h2>
<hr />

<div>
    <div style="display: flex; align-content: center;">

        <div style="width: 40%; border-radius: 3em; overflow:hidden;">
            <img src="@Model.EventImg" style="width: 100%;"/>
        </div>
        
        <div style="margin-left: 5em; width: 40%;">

            <h1 style="font-weight: 900;">@Model.Name</h1>
            <p>@Model.Description</p>

            <b style="color: mediumseagreen; margin-right: 1em;">$@Model.TicketPrice</b>
            @Html.ActionLink("Buy Ticket Now", "Details", new { id = Model.Id }, new { @class = "btn btn-success eventBtn" })
            

            <h3 style="font-weight: 700;">Details</h3>
            <table width="100%">
                <tr>
                    <td>Date:</td>
                    <td>@Model.EventDate</td>
                </tr>
                <tr>
                    <td>Address:</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <td>Venue Capacity:</td>
                    <td>@Model.VenueCapacity</td>
                </tr>
            </table>

        </div>

    </div>

    
</div>

<br />
<br />

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<p>
    @*UserId is set for 2 initially because I have user with Id 2 on my database -Chanju
       We can change it using Session or Cookie later*@

    @Html.ActionLink("Book Ticket", "BookTicket", new { eventId = Model.Id, userId = 2 }, null)
</p>
