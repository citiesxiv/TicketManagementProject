@model IEnumerable<TicketManagementProject.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="container text-center">
    
   
    
    <div style="display: flex;">
        @foreach (var item in Model) { 
           <div class="card" style="width: 23rem; overflow: hidden; border-radius: 1em; margin-bottom: 1.5em; margin-right: 2em; box-shadow: 0px 10px 25px rgb(0,0,0,0.1);">
               <div style="height: 10em; overflow:  hidden;">
                    <img src="@item.EventImg" class="card-img-top" alt="@item.Name" style="width: 100%;">
               </div>
               <div class="card-body" style="padding: 1em;">
                   <h5 class="card-title" style="font-weight: 800;">@item.Name</h5>
                   <p>$@item.TicketPrice</p>
                   <p class="card-text">@item.Description</p>
                   @*@<a href="#" class="btn btn-primary" style="margin-bottom: 1.5em;">View Detail</a>*@
                   @Html.ActionLink("View Event Details", "Details", new { id = item.Id }, null)
               </div>
           </div>
        }
    </div>
    
    
    
</div>

