@model TicketManagementProject.Models.User


@{
    ViewBag.Title = "Profile";
}



<div class="container" style="margin-bottom: 6.3em; margin-top: 6em;">

    <div style="display: flex;">

        <img src="~/Images/pfp.png" width="20%" height="auto"/>

        <div style="margin-left: 3em; margin-top: 1.5em;">

            <h1 style="font-weight: 900;">@Model.Name</h1>

            <style>
                td {
                    padding-right: 1em;
                }
            </style>

            <table >
                <tr>
                    <td>Address:</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>Phone Number:</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>@Model.Email</td>
                </tr>
        
            </table>

        </div>

        

    </div>


    <div style="margin-top: 3em; padding: 3em; border-radius: 3em; box-shadow: 0px 0px 50px rgba(0,0,0,0.1);">
        <h3 style=" font-weight: 700; margin-bottom: 1em; color: #4285F4;">Tickets Purchased</h3>
        @Html.Action("_PurchasedTickets", "Purchases")
    
    </div>


</div>



